{% extends 'base.html.twig' %}
{% set page = "parking" %}

{% block title %}Carte Parking{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
    <style type="text/css">
        #map{
            height:100vh;
            width: 100vw;
            overflow: hidden;
        }

        .leaflet-popup-tip
        {
            background: var(--primary-color);
            color: #ffffff;
        }
        .leaflet-popup-content-wrapper {
            background: #ffffff;
            color: #000000;
            text-align: center;
        }
        .leaflet-popup-content{
            margin: -1px;
            width: 150px;
        }
        .leaflet-popup-close-button {
            display: none;
        }
        .leaflet-popup-content h4 {
            background: var(--primary-color);
            color: #fff;
            margin: 0;
            display: block;
            padding: 11px;
            border-radius: 3px 3px 0 0;
            font-weight: 700;
        }
    </style>
{% endblock %}

{% block body %}


    <div id="map">
        <!-- Ici s'affichera la carte -->
    </div>

    <!-- Fichiers Javascript -->
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
    <script type="text/javascript">

        var stops = {
            {% for info in infos %}
            '{{ info.fields.name }}': { "lat": '{{info.fields.coords.0}}', "lon": '{{info.fields.coords.1}}', "dispo": '{{info.fields.dispo}}'},
            {% endfor %}
        };

        console.log(stops);
        var lat = 47.893824;
        var lon = 1.894932;
        var macarte = null;
        // Fonction d'initialisation de la carte
        function initMap() {
            var iconBase =  "https://cdn2.iconfinder.com/data/icons/starwars/icons/128/R2-D2.png";

            // Créer l'objet "macarte" et l'insèrer dans l'élément HTML qui a l'ID "map"
            macarte = L.map('map').setView([lat, lon], 11);
            // Leaflet ne récupère pas les cartes (tiles) sur un serveur par défaut. Nous devons lui préciser où nous souhaitons les récupérer. Ici, openstreetmap.fr
            L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
                // Il est toujours bien de laisser le lien vers la source des données
                attribution: 'données © <a href="//osm.org/copyright">OpenStreetMap</a>/ODbL - rendu <a href="//openstreetmap.fr">OSM France</a>',
                minZoom: 15,
                maxZoom: 20
            }).addTo(macarte);
            // Nous ajoutons un marqueur
            for(stop in stops){
                var myIcon = L.icon({
                    iconUrl: iconBase,
                    iconSize: [50, 50],
                    iconAnchor: [25, 50],
                    popupAnchor: [0, -50],
                });
                var marker = L.marker([stops[stop].lat, stops[stop].lon], {icon: myIcon}).addTo(macarte);
                marker.bindPopup("<h4>"+stop+"</h4><p>Place disponible : "+stops[stop].dispo+"</p>");
            }
        }
        function geo_success(position) {
            console.log(position.coords.latitude, position.coords.longitude);
            var marker = L.marker([position.coords.latitude, position.coords.longitude]).addTo(macarte);
            marker.bindPopup("you");
        }
        function geo_error() {
            alert("Sorry, no position available.");
        }
        // Fonction d'initialisation qui s'exécute lorsque le DOM est chargé
        initMap();
        navigator.geolocation.getCurrentPosition(geo_success, geo_error);
    </script>
{% endblock %}
